gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc
gem 'bootstrap-sass', '~> 3.3.6'              ##  css and sass styling framework
gem 'react-rails'                             ##  reactjs javascript front end library
gem 'devise'                                  ##  rails authentication gem
